<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <settings>
        <!-- 全局缓存 -->
        <setting name="cacheEnabled" value="flase"/>
        <!-- 允许JDBC支持生成的键 -->
        <setting name="useGeneratedKeys" value="true"/>
        <!-- 配置默认的执行器,REUSE执行器重用预处理语句.BATCH执行器重用语句和批量更新 -->
        <setting name="defaultExecutorType" value="REUSE"/>
        <!-- 延时加载 -->
        <setting name="lazyLoadingEnabled" value="true"/>
        <!-- 设置超时时间,决定驱动等待一个数据库响应的时间 -->
        <setting name="defaultStatementTimeout" value="25000"/>
        <!-- 打印查询语句 -->
        <setting name="logImpl" value="STDOUT_LOGGING" />
    </settings>
    
    <!-- 别名设置 -->
    <!--由于java命名规范和数据库命名规范不一致，所以需要在每个mapper.xml中写上ResultMap-->
    <typeAliases>

        <typeAlias alias="User" type="com.thenorthw.onesflow.common.model.user.User"/>
        <typeAlias alias="LoginRecord" type="com.thenorthw.onesflow.common.model.user.LoginRecord"/>
        <typeAlias alias="MailRecord" type="com.thenorthw.onesflow.common.model.mail.MailRecord"/>

        <typeAlias alias="BlogArticle" type="com.thenorthw.onesflow.common.model.blog.article.BlogArticle"/>
        <typeAlias alias="BlogArticleContent" type="com.thenorthw.onesflow.common.model.blog.article.BlogArticleContent"/>

        <typeAlias alias="BlogGroup" type="com.thenorthw.onesflow.common.model.blog.group.BlogGroup"/>
        <typeAlias alias="BlogRArticleGroup" type="com.thenorthw.onesflow.common.model.blog.group.BlogRArticleGroup"/>

        <typeAlias alias="BlogTag" type="com.thenorthw.onesflow.common.model.blog.tag.BlogTag"/>
        <typeAlias alias="BlogRArticleTag" type="com.thenorthw.onesflow.common.model.blog.tag.BlogRArticleTag"/>
    </typeAliases>

    <!-- 指定映射器路径 -->
    <mappers>
        <mapper resource="sqlMapper/user/user.xml"/>
        <mapper resource="sqlMapper/mail/mail.xml"/>
        <mapper resource="sqlMapper/advice/advice.xml"/>

        <mapper resource="sqlMapper/blog/group/group.xml"/>
        <mapper resource="sqlMapper/blog/group/rarticlegroup.xml"/>


        <mapper resource="sqlMapper/blog/article/article.xml"/>
        <mapper resource="sqlMapper/blog/article/articlecontent.xml"/>


        <mapper resource="sqlMapper/blog/tag/tag.xml"/>
        <mapper resource="sqlMapper/blog/tag/rarticletag.xml"/>
    </mappers>


</configuration>