<mapper namespace="com.thenorthw.onesflow.common.dao.user.UserDao">
    <resultMap id="UserMaps" type="User">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="loginname" column="loginname" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="phone" column="phone" jdbcType="VARCHAR"/>
        <result property="roleId" column="role_id" jdbcType="BIGINT"/>
        <result property="nick" column="nick" jdbcType="VARCHAR"/>
        <result property="sex" column="sex" jdbcType="INTEGER"/>
        <result property="introduction" column="introduction" jdbcType="VARCHAR"/>
        <result property="avatar" column="avatar" jdbcType="VARCHAR"/>
        <result property="backgroundImg" column="background_img" jdbcType="VARCHAR"/>
        <result property="gmtActivate" column="gmt_activate" jdbcType="TIMESTAMP"/>
        <result property="gmtCreate" column="gmt_create" jdbcType="TIMESTAMP"/>
        <result property="gmtModified" column="gmt_modified" jdbcType="TIMESTAMP"/>
    </resultMap>

    <resultMap id="LoginRecordMaps" type="LoginRecord">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="uid" column="uid" jdbcType="BIGINT"/>
        <result property="address" column="address" jdbcType="VARCHAR"/>
        <result property="success" column="success" jdbcType="INTEGER"/>
        <result property="gmtCreate" column="gmt_create" jdbcType="TIMESTAMP"/>
        <result property="gmtModified" column="gmt_modified" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="fullColumns">
        `id`,
        `loginname`,
        `password`,
        `phone`,
        `role_id`,
        `nick`,
        `sex`,
        `introduction`,
        `avatar`,
        `background_img`,
        `gmt_activate`,
        `gmt_create`,
        `gmt_modified`
    </sql>

    <sql id="infoColumns">
        `id`,
        `role_id`,
        `nick`,
        `sex`,
        `introduction`,
        `avatar`,
        `background_img`,
        `gmt_activate`,
        `gmt_create`,
        `gmt_modified`
    </sql>
    <insert id="registerNewUser" parameterType="User" useGeneratedKeys="true" keyProperty="id">
      INSERT INTO user(
        `id`,
        `loginname`,
        `password`,
        `phone`,
        `role_id`,
        `nick`,
        `sex`,
        `introduction`,
        `avatar`,
        `background_img`,
        `gmt_activate`,
        `gmt_create`,
        `gmt_modified`)
      VALUES (#{id},#{loginname},#{password},#{phone},#{roleId},#{nick},#{sex},#{introduction},#{avatar},#{backgroundImg},#{gmtActivate},#{gmtCreate},#{gmtModified})
    </insert>



    <select id="getUserProfileByLoginName" parameterType="string" resultMap="UserMaps">
      select <include refid="fullColumns"/>
        from user
        where loginname=#{loginname}
    </select>

    <select id="getDetailedUserInfoByUid" parameterType="long" resultMap="UserMaps">
        select <include refid="infoColumns"/>
        from user
        where id=#{id}
    </select>


    <select id="getUserWithLAndP"  resultMap="UserMaps">
        select <include refid="infoColumns"/>
        from user
        where loginname=#{loginname} AND password = #{password}
    </select>



