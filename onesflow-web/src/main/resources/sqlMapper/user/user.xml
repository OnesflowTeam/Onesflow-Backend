        UPDATE user
        SET gmt_activate = #{gmtActivate}
        WHERE id = #{id}
    </update>

    <!--login record operations-->
    <insert id="addLoginRecord" parameterType="LoginRecord" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO login_record(
        `id`,
        `uid`,
        `address`,
        `success`,
        `gmt_create`,
        `gmt_modified`)
